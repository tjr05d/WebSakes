<section class="elForm">
  <div class="container1">
    <div class="box" id="sign-up">
    <%= link_to "Home", matches_show_path, class: "back-arrow" %>
      <div class="form">
        <h2 class="title">Edit User</h2>
          <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>

            <%= f.label :first_name %>
            <%= f.text_field :first_name, :placeholder => "First name" %>

            <%= f.label :last_name %>
            <%= f.text_field :last_name, :placeholder => "Last name" %>

            <%= f.label :email %>
            <%= f.email_field :email, :placeholder => "Email"  %>

            <%= f.label :contact_number %>
            <%= f.text_field :contact_number, :placeholder => "Your phone number"%>

            <%= f.label :twitter %>
            <%= f.text_field :twitter, :placeholder => "Twitter Username"  %>

            <%= f.label :linkedin%>
            <%= f.text_field :linkedin, :placeholder => "Linkedin Username"  %>

            <%= f.label :job_title%>
            <%= f.text_field :job_title, :placeholder => "Job Title"  %>

            <%= f.label :company_name%>
            <%= f.text_field :company_name, :placeholder => "Company Name"  %>

            <%= f.label :password %>
            <%= f.password_field :password, :placeholder => "Password" %>

            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>

            <%= f.submit "Update Profile", class: "btn btn-primary" %>
          <%end%>
           <%= link_to "Delete User", current_user, class: "btn btn-danger", :style  =>"width:100%;", method: :delete,
                                  data: { confirm: "You sure?" } %>
      </div>

    </div>
  </div>
</section>
