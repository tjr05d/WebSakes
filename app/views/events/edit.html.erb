<h1>Editing Event</h1>

<%= form_for :event, url: event_path(@event), method: :patch do |f| %>

<% if @event.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:
  </h2>
  <ul>
    <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>

