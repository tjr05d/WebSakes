<body class="losMatch">
<h1>Matches</h1>

<h2><%= current_user.first_name.capitalize %> you have <%= pluralize(@combined_matches.count, "match") %> </h2>


<% @combined_matches.each do |match| %>
  <%if match.user.id == current_user.id %>

  <div id="test-list">

    <div class='container'>
      <div class='search-container'>
        <input placeholder='search' type='text' class="fuzzy-search">
        <a class='button'>
          <i class='icon-search'></i>
        </a>
      </div>
    </div>
    <section class="list">
      <li>
    <div id='card'>
      <div id='front'>
        <div class="logo"><span class="fat"><%= match.connection.first_name.chars.first %></span><span class="skinny"><%= match.connection.last_name.chars.first%></span></div>
      <h3>
        <p class="name">
           <%= match.connection.first_name%> <%= match.connection.last_name%>
        </p>
      </h3>
        <%= match.connection.first_name%> <%= match.connection.last_name%>
        <!-- <h1>
          <%#= match.connection.first_name%> <%#= match.connection.last_name%>
        </h1> -->
      </div>
      <div id='back'>
        <strong><%= mail_to match.connection.email %></strong>
        <strong><%= match.connection.contact_number %></strong><br>
        <strong><%= match.connection.twitter %></strong><br>
        <strong><%= match.connection.linkedin %></strong><br>
      </div>
    </div>
    </li>
    <% else %>
    <li>
    <div id='card'>
      <div id='front'>
      <div class="logo"><span class="fat"><%= match.user.first_name.chars.first %></span><span class="skinny"><%= match.user.last_name.chars.first%></span></div>
      <h3>
        <p class="name">
            <%= match.user.first_name%> <%= match.user.last_name%>
        </p>
      </h3>
        <!-- <h1>
          <%#= match.user.first_name%> <%#= match.user.last_name%>
        </h1> -->
      </div>
      <div id='back'>
        <strong><%= mail_to match.user.email %></strong>
        <strong><%= match.user.contact_number %></strong><br>
        <strong><%= match.user.twitter %></strong><br>
        <strong><%= match.user.linkedin %></strong><br>
      </div>
    </div>
    </li>
    <%end%>
  <%end%>
        </section>
  </div>

</body>
